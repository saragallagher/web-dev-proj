<a href="/languages/<%= language.id %>"><button class="btn">BACK</button></a>

<div class="col-sm-6 col-sm-offset-3">
  <h1>Edit Post</h1>
  <%=post.id%>
  <form action="/languages/<%=language.id%>" method="patch">
    <div class="form-group">
      <input class="form-control" type="text" name="name" value="<%=post.title%>">
    </div>
    <div class="form-group">
      <textarea class="form-control" name="name" rows="8" cols="80"><%=post.body%></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Update Post</button>
  </form>

</div>
