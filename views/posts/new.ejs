<a href="/languages"><button class="btn">HOME</button></a>

<div class="col-sm-6 col-sm-offset-3">
  <h1>Add Post</h1>

  <form action="/languages/<%=language.id%>/posts" method="post">
    <div class="form-group">
      <input class="form-control" type="text" name="title" placeholder="Title">
    </div>
    <div class="form-group">
      <textarea class="form-control" type="text" name="body" placeholder="Body"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Add Post</button>
  </form>

</div>
